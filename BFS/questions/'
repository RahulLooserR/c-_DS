#include <iostream>
#include <list>


class Graph {
	private:
		int v;          // number of vertices
		std::list<int> *adjList;
		std::list<int> queue;
		bool *visited;

	public:
		Graph (int v);
		void addEdge (int src, int dest);
		void BFS ();
		void print ();
};

Graph::Graph (int v):v{v}
{
	adjList = new std::list<int>[v];
	visited = new bool[v];
	visited = {0};
}

void Graph::addEdge (int src, int dest)
{
	adjList[src].push_back(dest);
	adjList[dest].push_back(src);
}

void Graph::BFS ()
{
	//queue.push_back(src);

	if (queue.empty()){
		return;
	}

	int front = queue.front();
	
	for (auto temp:adjList[front]){
		if (visited[temp] != true){
			queue.push_back(temp);
			visited[temp] = true;
			std::cout << temp << " ";

		}
	}
	queue.pop_front();
	BFS (queue.front());
}

void Graph::print ()
{
	for (auto i = 0; i < v; i++){
		std::cout << i << "->";
		for (auto temp:adjList[i])
			std::cout << temp << "->";

		std::cout << std::endl;
	}
}

int main ()
{
	Graph graph(6);

	graph.addEdge(0, 1);
	graph.addEdge(0, 2);
	graph.addEdge(0, 4);
	graph.addEdge(1, 5);
	graph.addEdge(2, 5);
	graph.addEdge(2, 3);

	graph.queue.push_back(0);

	graph.print();
	graph.BFS();

	return 0;
}

